<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="app" content="fun">
  <meta name="theme-color" content="#317EFB"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Bytely</title>
  <link rel="stylesheet" href="../../css/signin.css">
  <link rel="stylesheet" href="../../css/index.css">
</head>
<body>
  {{>navbar}}
  <div class="form-container">
  <div class="cont">
    <form action="/signin" method="post">
      <br>
      <label for="username" style="margin-left:10px">Name</label>
      <br>
      <input type="text" id="username" class="text" name="username" autocomplete ="off" required minlength="4" spellcheck="false">
      <br>
      <label for="password" style="margin-left:10px;">Password</label>
      <br>
      <input type="password" id="password" class="text" name="password" autocomplete ="off" required spellcheck="false"> 
      <i onclick="hide()" class="fas fa-eye-slash" id="slash" style="transform: translateY(-36px) translateX(172px);cursor:pointer"></i>
      <br>
      <button type="submit" id="submit">Submit</button>
    </form>
  </div>
  </div>
  <script>

    function hide(){
      const icon =  document.getElementById('slash')
      icon.classList.toggle('fa-eye-slash')
      icon.classList.toggle('fa-eye')
      const password = document.getElementById('password')
      const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
      password.setAttribute('type', type);
    }

  </script>
</body>
</html>